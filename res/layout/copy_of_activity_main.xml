<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#52bdbd" >

            
            <ImageView
                android:id="@+id/courseScore"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/top_logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/buttonunfocused2"
                    android:onClick="startIndividualCenter"
                    android:src="@drawable/icon_person"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_overlay" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollViewMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="false"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:padding="10dp" >

                            <LinearLayout
                                android:id="@+id/news"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_news" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="新闻中心"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/secondClass"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_party" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="第二课堂"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/library"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_admissions" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="图书馆"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="horizontal"
                            android:padding="10dp" >

                            <LinearLayout
                                android:id="@+id/emptyClassroom"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_push_alert" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="空闲教室"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/schedules"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_events" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="课程表"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/swjtuMap"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_lost_found" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="失物招领"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="horizontal"
                            android:padding="10dp" >

                            <LinearLayout
                                android:id="@+id/pppoeActivity"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_web13" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="校园网连接"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/swjtuChat"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_message" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="校园信箱"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/takeout"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_dining" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="外卖订餐"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:visibility="visible" >

                            <LinearLayout
                                android:id="@+id/sportsCenter"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_sports" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="体育部"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/phoneBook"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_directory" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="校园通讯录"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/individualCenter"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_friends" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="个人中心"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:visibility="gone" >

                            <LinearLayout
                                android:id="@+id/secondClass"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_rss_feed11" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="空闲教室"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/wait"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_web13" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="课程表"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/wait"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/balloon_white"
                                android:orientation="vertical"
                                android:paddingBottom="0dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="0dp"
                                android:paddingTop="0dp" >

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/icon_jobs" />

                                <TextView
                                    android:id="@+id/showId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="交大地图"
                                    android:textColor="@color/black_overlay" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#52bdbd"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/timeNow"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/buttonunfocused2"
                        android:gravity="center"
                        android:minWidth="200dp"
                        android:text="第五周 星期四"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/shareBtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/buttonunfocused2"
                        android:onClick="share"
                        android:src="@drawable/share" />

                    <ImageButton
                        android:id="@+id/infoBtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/buttonunfocused2"
                        android:onClick="startActivityInfo"
                        android:src="@drawable/info" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>