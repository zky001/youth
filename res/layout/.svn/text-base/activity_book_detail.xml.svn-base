<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" 
    android:paddingTop="0dp"
    tools:context=".BookListActivity" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/mainbg2"
            android:orientation="vertical" >
            
            
                <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="50dp"
			        android:layout_marginLeft="0dp"
			        android:layout_marginTop="0dp"
			        android:background="#4f6d5e" >
			
			        <ImageView
			            android:id="@+id/image"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="10dp"
			            android:src="@drawable/toplogo" />
			
			            <LinearLayout
			                android:layout_width="fill_parent"
			                android:layout_height="50dp"
			                android:layout_gravity="right"
			                android:layout_marginLeft="0dp"
			                android:layout_marginRight="10dp"
			                android:layout_marginTop="50dp"
			                android:background="#4f6d5e"
			                android:gravity="right" >
							<RelativeLayout 
							    android:layout_width="fill_parent"
							    android:layout_height="fill_parent">
					
							</RelativeLayout>
						</LinearLayout>
    			</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        
        android:background="@color/black_overlay" >
        
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

 

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:gravity="center"
             android:orientation="horizontal" >

             <ImageView
                 android:id="@+id/booksImg"
                 android:layout_width="105dp"
                 android:layout_height="141dp"
                 android:src="@drawable/bookdefaultimg" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:orientation="vertical" >

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal" >
                     
                  	<TextView
                  	    android:id="@+id/textView"
                  	    android:layout_width="50dp"
                  	    android:layout_height="wrap_content"
                  	    android:layout_gravity="left|center_vertical"
                  	    android:layout_margin="5dp"
                  	    android:text="书名:"
                  	    android:textSize="12sp" />
                 
			        <TextView
			            android:id="@+id/showBookname"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="left|center_vertical"
			            android:text=""
			            android:textSize="12sp" />
				</LinearLayout>
				
                 
                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal" >
                     
                  	<TextView
                  	    android:id="@+id/textView"
                  	    android:layout_width="50dp"
                  	    android:layout_height="wrap_content"
                  	    android:layout_gravity="left|center_vertical"
                  	    android:layout_margin="5dp"
                  	    android:text="作者:"
                  	    android:textSize="12sp" />
  
		        <TextView
		            android:id="@+id/showAuthor"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="left|center_vertical"
		            android:text=""
		            android:textSize="12sp" />
				</LinearLayout>
				
                 
                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal" >
                     
                  	<TextView
                  	    android:id="@+id/textView"
                  	    android:layout_width="50dp"
                  	    android:layout_height="wrap_content"
                  	    android:layout_gravity="left|center_vertical"
                  	    android:layout_margin="5dp"
                  	    android:text="出版社:"
                  	    android:textSize="12sp" />
  
		        <TextView
		            android:id="@+id/showPublisher"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="left|center_vertical"
		            android:text=""
		            android:textSize="12sp" />
				</LinearLayout>
				
                 
                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal" >
                     
                  	<TextView
                  	    android:id="@+id/textView"
                  	    android:layout_width="50dp"
                  	    android:layout_height="wrap_content"
                  	    android:layout_gravity="left|center_vertical"
                  	    android:layout_margin="5dp"
                  	    android:text="书目号："
                  	    android:textSize="12sp" />
  
		        <TextView
		            android:id="@+id/showBookId"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="left|center_vertical"
		            android:text=""
		            android:textSize="12sp" />
				</LinearLayout>
				
                 
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal" >
                     
                  	<TextView
                  	    android:id="@+id/textView"
                  	    android:layout_width="50dp"
                  	    android:layout_height="wrap_content"
                  	    android:layout_gravity="left|center_vertical"
                  	    android:layout_margin="5dp"
                  	    android:text="索书号："
                  	    android:textSize="12sp" />
  
		        <TextView
		            android:id="@+id/showReferenceNum"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="left|center_vertical"
		            android:text=""
		            android:textSize="12sp" />
				</LinearLayout>
				
                 
                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal" >
                     
                  	<TextView
                  	    android:id="@+id/textView"
                  	    android:layout_width="50dp"
                  	    android:layout_height="wrap_content"
                  	    android:layout_gravity="left|center_vertical"
                  	    android:layout_margin="5dp"
                  	    android:text="ISBN："
                  	    android:textSize="12sp" />
  
		       <TextView
		           android:id="@+id/showISBN"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_gravity="left|center_vertical"
		           android:text=""
		           android:textSize="12sp" />
		        </LinearLayout>
       		 </LinearLayout>

</LinearLayout>
